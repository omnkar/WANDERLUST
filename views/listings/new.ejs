<% layout("/layouts/boilerplate") %>
<div class="row mt-3">

    <br>
    <div class="col-8 offset-2" >
        <br>
    <h3>Create a New Listings</h3>
    <form action="/listings" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" name="listing[title]" id="title" placeholder="Add a Catchy title" required>
            <div class="valid-feedback">
                Title looks good!
            </div>
        </div>
       
        
        <div class="mb-3">
            <label for="desc" class="form-label"> description</label>
            <textarea required name="listing[description]" class="form-control" placeholder="" id="desc"></textarea>
            <div class="invalid-feedback">
                Please enter short description
            </div>
        </div>
        
        <div class="mb-3">
            <label for="image" class="form-label">Image link</label>
        <input type="file" id="image" class="form-control" name="listing[image]" placeholder="Enter image URL/link">
        </div>
        
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label"> Price</label>
            <input  id="price" required class="form-control" name="listing[price]" placeholder="1200">
            <div class="invalid-feedback">
                Price Should be valid
            </div>
            </div>
           
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label"> Country</label>
            <input type="text" id="country" required class="form-control" name="listing[country]" placeholder="india">
            <div class="invalid-feedback">
                Country should be valid
            </div>
            </div>
    
        </div>
        
        <div class="mb-3">
            <label for="loc" class="form-label"> Location</label>
        <input type="text" class="form-control" required name="listing[location]" id="loc" placeholder="Chh.sabhajinagar,maharashtra">
        <div class="invalid-feedback">
            Location should be valid
        </div>
        </div>

        <button class="btn btn-dark add-btn mt-2">Add</button>
        <br><br>
    </form>
</div>
</div>
<script src="/js/script.js"></script>

